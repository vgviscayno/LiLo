                <DataGridTextColumn MinWidth="40" 
                                    Header="31" 
                                    Binding="{Binding Days[30], 
                                              StringFormat=hh\\:mm, 
                                              TargetNullValue=' --- '}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>

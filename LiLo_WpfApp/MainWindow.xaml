<Window x:Class="LiLo_WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiLo_WpfApp"
        xmlns:uc="clr-namespace:LiLo_WpfApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="File">
            </MenuItem>
        </Menu>
        <TextBlock x:Name="Time" Margin="10" HorizontalAlignment="Right"/>
        <TabControl Margin="10" Padding="10">
            <TabItem Header="Logs">
                <uc:TimesheetTabView />
            </TabItem>
            <TabItem Header="Employee">
                <uc:EmployeeTabView />
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
